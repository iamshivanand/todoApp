</head>
<body>
	<div class="container">
		<h2>TODO App</h2>

	<div id="create-task-container">
		<div class="col-12 col-sm-12 col-md-12 col-lg-12 " id="create-task-description" >
			<h4 style="margin: 0px 0px 10px 10px;">CREATE A TASk</h4>
			<form action="/create-task" method="POST" id="form">
				<input type="text" name="task" placeholder="TASK NAME"  class="border" required>
				<textarea name="description" cols="40" rows="2" placeholder="Description"  class="border"></textarea> 
				<input type="date" name="date" required class="border" >
				<button type="submit" class="button"><i class="fas fa-plus"></i> Add Task</button>
				
				
			</form>
		</div>
		<!-- <div id="calender" style="width: 30%; height: 70%;"></div> -->
		
		
	</div>

	<div class="col-12 col-sm-12 col-md-12 col-lg-12" id="Show-task-container">
		<h3 >Tasks List</h3>
		<ul style="padding: 0px;">
			
			<% for (let i of tasks_list ) { %>
			  <li class="task">
				<div id="task-container">
					<div class="description" >
						<h5><%= i.task %></h5>
						<p><%= i.description %></p>
					</div>
					<div class="delete-button" >
						<a href="/delete-task/?id=<%= i._id%>">
							<i class="fas fa-trash" style="color: red;"></i>
						</a>
					</div>
				</div>	
			  </li>  
				
			<% } %>
		</ul>
	</div>

	</div>




	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>